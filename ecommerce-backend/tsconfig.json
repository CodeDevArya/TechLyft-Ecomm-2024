{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true, // Helps with CommonJS modules
    "forceConsistentCasingInFileNames": true // Ensures consistent file naming
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
